rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - more permissive for testing
    
    // Allow all authenticated users to read/write for development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for users collection
    match /users/{userId} {
      // Allow authenticated users to read their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to create new users (for super admin functionality)
      allow create: if request.auth != null;
      
      // Allow admins to read all user data
      allow read: if request.auth != null && 
        (request.auth.token.email == 'developer@ispaan.com' ||
         request.auth.token.email == 'sifiso@thegaselagroup.co.za' ||
         request.auth.token.role == 'super-admin' ||
         request.auth.token.admin == true);
    }
    
    // Allow authenticated users to create audit logs
    match /audit-logs/{document} {
      allow create, read: if request.auth != null;
    }
  }
}





